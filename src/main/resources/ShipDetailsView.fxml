    </GridPane>
    <Label text="Equipment:"/>
    <Label fx:id="lblEquipEngines" text="???"/>
    <Label fx:id="lblEquipBeams" text="???"/>
    <Label fx:id="lblEquipLaunchers" text="???"/>
